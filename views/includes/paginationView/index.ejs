<% if(locals.pages && locals.currentPage) { %>
  <% if(pages > 1) { %>

    <nav aria-label="Page navigation for Manage tab">
      <ul class="pagination">
        <li class="page-item <%= (currentPage == 1) ? 'disabled' : '' %>">
          <a class="page-link" href="<%= paginationLink + (parseInt(currentPage) - 1) %>" <%= (currentPage == 1) ? 'tabindex="-1" aria-disabled="true"' : '' %>>Previous</a>
        </li>
        <!-- -->

        <% if(pages <= 10) { %>
          <%- include('includes/countAndOutputPages') %>
        <% } else { %>
          <% if(currentPage <= 5) { %>
            <%- include('includes/countAndOutputPages') %>
            <% if(pages > 5) { %>
              <%- include('includes/outputLastPages') %>
            <% } %>
          <% } else if(currentPage > 5) { %>
            <% if((pages - currentPage) <= 5) { %>
              <% if((pages - currentPage) == 5) { %>
                <%- include('includes/outputMiddlePages') %>
              <% } else { %>
                <% for(let i = 1; i <= 3; i++) { %>
                  <li class="page-item"><a class="page-link" href="<%= paginationLink + parseInt(i) %>"> <%= i %> </a></li>
                <% } %>
                <li class="page-item disabled"><a class="page-link" href="#"> ... </a></li>
                <%- include('includes/countAndOutputPages') %>
              <% } %>
            <% }  else { %>
              <%- include('includes/outputMiddlePages') %>
            <% } %>
          <% } %>
        <% } %>


        <!-- -->
        <li class="page-item <%= (currentPage == pages) ? 'disabled' : '' %>">
          <a class="page-link" href="<%= paginationLink + (parseInt(currentPage) + 1) %>" <%= (currentPage == pages) ? 'tabindex="-1" aria-disabled="true"' : '' %>>Next</a>
        </li>
      </ul>
    </nav>
  <% } %>
<% } %>
