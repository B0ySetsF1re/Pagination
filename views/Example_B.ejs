<%- include('includes/head') %>

<div class="jumbotron">
  <div class="container">

      <h1 class="display-3">Pagination examples</h1>
      <p>Please select preferred example...</p>

      <div class="row">

        <div class="col-sm-3">
          <form method="POST" action="/generatePages">
            <a class="btn btn-secondary btn-lg" href="#" role="button" onclick="this.closest('form').submit();return false;">Generate pages...</a>
          </form>
        </div>

        <div class="col-sm">
          <a class="btn btn-primary btn-lg" href="/example_a/1" role="button">Example A &raquo;</a>
          <a class="btn btn-warning btn-lg" href="/example_b/1" role="button">Example B &raquo;</a>
          <a class="btn btn-primary btn-lg" href="/example_c/1" role="button">Example C &raquo;</a>
        </div>

      </div>

  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10">

      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-Mail</th>
            <th>Username</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% if(locals.users) { %>
            <% users.forEach(function(user, index) { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td><%= user.role %></td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>

      </div>
    </div>
  </div>

<%- include('includes/footer') %>
